            position: absolute;
            top: 0px;
            left: 0px;
            background-color: transparent;
        }

        div#hud-top-center {
            position: absolute;
            top: 0px;
            left: 33.3%;
            background-color: transparent;
        }

        div#hudCoordInfo, div#hudOrientInfo, div#targetinfo, .helptext {
            text-shadow: 0em 0em 0.1em #8F7;
            background-color: transparent;
        }

        div#targetinfo {
            position: absolute;
            left: 0;
            bottom: 0;
        }

        div#hudCoordInfo, div#hudOrientInfo, .helptext {
